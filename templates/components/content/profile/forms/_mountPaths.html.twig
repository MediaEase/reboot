<div class="rounded px-2 mb-4 border-gray-200 dark:border-gray-500">
    <h3 class="text-xl font-semibold mb-4">Available mounts</h3>
    {% for mount in user.getMounts() %}
        <div class="flex items-center justify-between rounded-md hover:shadow-md transition-shadow">
            <span class="text-gray-700 dark:text-slate-200">{{ mount.path }}</span>
            {% if mount.path != '/' %}
                <div class="w-2/8 ml-3 md:mb-0 pt-3 xl:mt-2 xl:p-0 xl:pl-3">
                    <form method="post" action="{{ path('app_mount_delete', {'id': mount.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ mount.id) }}">
                        <button type="submit" class="flex items-center text-red-500 hover:text-red-700 px-2 rounded focus:outline-none focus:shadow-outline ml-auto">
                            {{ ux_icon('flowbite:trash-bin-outline', {class: 'w-5 h-5 icon mr-1'}) }}
                            Delete
                        </button>
                    </form>
                </div>
            {% endif %}
        </div>
    {% endfor %}
</div>
<div class="flex justify-center items-end mt-4 xl:m-0 xl:p-0">
    <button
        type="button"
        class="box-content rounded-none border-none hover:no-underline focus:opacity-100 focus:shadow-none focus:outline-none"
        data-te-modal-dismiss
        aria-label="Close">
        {{ ux_icon('flowbite:x-outline', { class: 'w-5 h-5 rounded-full bg-red-800 fill-base-100 font-bold mr-2 hover:bg-red-600 hover:fill-white' }) }}
    </button>
</div>
