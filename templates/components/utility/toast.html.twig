<!-- components/utility/toast.html.twig -->
{% set bgColor, textColor, borderColor, loadingbarColor = '', '', '', '' %}
{% if type == 'success' %}
    {% set bgColor = 'bg-green-100' %}
    {% set textColor = 'text-green-700' %}
    {% set loadingbarColor = 'bg-green-800' %}
    {% set borderColor = 'border-green-200' %}
{% elseif type == 'error' %}
    {% set bgColor = 'bg-red-100' %}
    {% set textColor = 'text-red-700' %}
    {% set loadingbarColor = 'bg-red-800' %}
    {% set borderColor = 'border-red-200' %}
{% elseif type == 'warning' %}
    {% set bgColor = 'bg-yellow-100' %}
    {% set textColor = 'text-yellow-700' %}
    {% set loadingbarColor = 'bg-yellow-800' %}
    {% set borderColor = 'border-yellow-200' %}
{% elseif type == 'info' %}
    {% set bgColor = 'bg-blue-100' %}
    {% set textColor = 'text-blue-700' %}
    {% set loadingbarColor = 'bg-blue-800' %}
    {% set borderColor = 'border-blue-200' %}
{% endif %}

<div
    class="pointer-events-auto mx-auto mb-4 hidden w-96 max-w-full rounded-lg {{ bgColor }} bg-clip-padding text-sm {{ textColor }} shadow-lg shadow-black/5 data-[te-toast-show]:block data-[te-toast-hide]:hidden"
    role="alert"
    aria-live="assertive"
    {{ stimulus_controller('toast') }}
    aria-atomic="true"
    data-te-autohide="false"
    data-te-toast-init
    data-te-toast-show>
    <div
        class="relative flex items-center justify-between rounded-t-lg border-b-2 {{ borderColor }} {{ bgColor }} bg-clip-padding px-4 pb-2 pt-2.5 {{ textColor }}">
        <div class="absolute top-0 left-0 h-1 w-full {{ loadingbarColor }} animate-loading-bar"></div>
        <p class="flex items-center font-bold {{ textColor }}">
            <span class="mr-2 h-4 w-4">
                <svg
                xmlns="http://www.w3.org/2000/svg"
                viewBox="0 0 24 24"
                fill="currentColor">
                <path
                    fill-rule="evenodd"
                    d="M2.25 12c0-5.385 4.365-9.75 9.75-9.75s9.75 4.365 9.75 9.75-4.365 9.75-9.75 9.75S2.25 17.385 2.25 12zm8.706-1.442c1.146-.573 2.437.463 2.126 1.706l-.709 2.836.042-.02a.75.75 0 01.67 1.34l-.04.022c-1.147.573-2.438-.463-2.127-1.706l.71-2.836-.042.02a.75.75 0 11-.671-1.34l.041-.022zM12 9a.75.75 0 100-1.5.75.75 0 000 1.5z"
                    clip-rule="evenodd" />
                </svg>
            </span>
            {{ title }}
        </p>
        <div class="flex items-center">
            <p class="text-xs {{ textColor }}">{{ "now"|date("Y-m-d H:i:s") }}</p>
            <button
                type="button"
                class="ml-2 box-content rounded-none border-none opacity-80 hover:no-underline hover:opacity-75 focus:opacity-100 focus:shadow-none focus:outline-none"
                data-te-toast-dismiss
                aria-label="Close">
                <span class="w-[1em] focus:opacity-100 disabled:pointer-events-none disabled:select-none disabled:opacity-25 [&.disabled]:pointer-events-none [&.disabled]:select-none [&.disabled]:opacity-25">
                    <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke-width="1.5"
                        stroke="currentColor"
                        class="h-6 w-6">
                        <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        d="M6 18L18 6M6 6l12 12" />
                    </svg>
                </span>
            </button>
        </div>
    </div>
    <div
        class="break-words rounded-b-lg {{ bgColor }} px-4 py-4 {{ textColor }}">
        {{ body }}
    </div>
</div>
