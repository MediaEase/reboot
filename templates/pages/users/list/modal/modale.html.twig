{% import '_macros/form/form.html.twig' as form_macros %}
<div class="pointer-events-auto relative flex w-full flex-col rounded-xl border-none content-background dark:content-background bg-clip-padding text-current shadow-lg transition-colors duration-200 outline-none">
    <div class="flex flex-shrink-0 items-center justify-between rounded-t-xl border-b border-gray-500 border-opacity-75">
        <h5 class="text-xl font-light leading-normal text-center w-full font-mono text-neutral-700 dark:text-neutral-200" id="addUserModalLabel">
            Create new user
        </h5>
        <button
            type="button"
            class="box-content rounded-none border-none hover:no-underline focus:opacity-100 focus:shadow-none focus:outline-none"
            data-te-modal-dismiss
            aria-label="Close">
            {{ ux_icon('flowbite:x-outline', { class: 'w-5 h-5 rounded-full bg-red-800 fill-base-100 font-bold mr-2 hover:bg-red-600 hover:fill-white' }) }}
        </button>
    </div>
    <div class="relative bg-gray-200/55 dark:bg-gray-900/85 rounded-b-xl p-4">
        {{ form_start(createUserForm) }}
        <div class="flex-grow mb-8">
            {{ form_label(createUserForm.username, 'Username', {'label_attr': {'class': 'block text-sm font-bold mb-2 text-left'}})}}
            {{ form_widget(createUserForm.username, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-gray-100 dark:bg-gray-800'}}) }}
            {{ form_macros.iconed_error(createUserForm, 'username') }}
            
            {{ form_label(createUserForm.email, 'Email', {'label_attr': {'class': 'block text-sm font-bold my-2 mt-4 text-left'}})}}
            {{ form_widget(createUserForm.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-gray-100 dark:bg-gray-800'}}) }}
            {{ form_macros.iconed_error(createUserForm, 'email') }}
            
            {{ form_label(createUserForm.plainPassword.first, 'Password', {'label_attr': {'class': 'block text-sm font-bold my-2 mt-4 text-left'}})}}
            <div class="flex space-x-4">
                <div class="w-1/2">
                    {{ form_help(createUserForm.plainPassword.first, {'help_attr': {'class': 'text-left text-xs text-gray-500 dark:text-gray-400'}}) }}
                    {{ form_widget(createUserForm.plainPassword.first, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-gray-100 dark:bg-gray-800'}}) }}
                </div>
                <div class="w-1/2">
                    {{ form_help(createUserForm.plainPassword.second, {'help_attr': {'class': 'text-left text-xs text-gray-500 dark:text-gray-400'}}) }}
                    {{ form_widget(createUserForm.plainPassword.second, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-gray-100 dark:bg-gray-800'}}) }}
                </div>
            </div>
            {{ form_macros.iconed_error(createUserForm, 'plainPassword') }}
            
            {{ form_label(createUserForm.group, 'Group', {'label_attr': {'class': 'block text-sm font-bold my-2 mt-4 text-left'}})}}
            {{ form_widget(createUserForm.group, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline bg-gray-100 dark:bg-gray-800'}}) }}
            {{ form_macros.iconed_error(createUserForm, 'group') }}
        </div>
        <div class="flex justify-start flex-row-reverse items-center mb-4 xl:m-0 xl:p-0 py-3">
            {{ form_macros.save_button(createUserForm) }}
        </div>
        {{ form_row(createUserForm._token) }}
        {{ form_end(createUserForm, {'render_rest': false}) }}
    </div>
</div>
