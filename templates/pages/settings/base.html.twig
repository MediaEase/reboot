<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8">
		{% import '_macros/branding.html.twig' as brand %}
		<title>
			{% block title %}
			{% endblock %}
		</title>
		{{ brand.favicon(settings.favicon) }}
		{% block stylesheets %}
			{{ encore_entry_link_tags('app') }}
		{% endblock %}

		{% block javascripts %}
			{{ encore_entry_script_tags('app') }}
		{% endblock %}
	</head>
	<body class="bg-fixed bg-gray-100 dark:bg-gray-800" id="page-content" data-container-id={{ user.apiKey }}>
		{% include "components/navigation/sidebar.html.twig" %}
		<div class="bottom-0 left-0 right-0 top-0 h-full min-h-[100vh] w-full bg-fixed p-6 text-center background-cover text-white/80"
			{% if user.preferences and user.preferences.backdrop is not null %}
				style="background-image: url('{{ user.preferences.backdrop }}');"
			{% endif %}
			>
			{% include "components/navigation/settings_sidebar.html.twig" %}
			{% block body %}{% endblock %}
		</div>
		<script src="https://cdn.jsdelivr.net/npm/tw-elements/dist/js/tw-elements.umd.min.js"></script>
	</body>
</html>
