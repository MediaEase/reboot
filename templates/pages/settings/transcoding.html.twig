{% extends 'pages/settings/base.html.twig' %}

{% block title %}Transcoder Settings - {{ app.request.server.get('SITE_NAME') }}
{% endblock %}

{% block body %}
	{% import '_macros/settings.html.twig' as settings_macro %}
	{% import '_macros/breadcrumb.html.twig' as breadcrumb %}
	{% import '_macros/form/buttons.html.twig' as form_macros %}
	<div class="max-w-8xl md:mx-auto md:px-auto lg:px-6">
		<div class="xl:pt-[2.3615rem] pt-[15rem]">
			<div class="xl:pl-[25rem]">
				<div class="w-full mx-auto pt-10 xl:max-w-none xl:ml-4 rounded-xl mb-4">
					{{ breadcrumb.add('Transcoder Settings', 'https://mediaease.github.io/docs/')  }}
					{{ settings_macro.infobox(
                        'info', 
                        'This page allows you to easily manage the transcoding settings for your media centers.', 
                        'For detailed instructions and additional information on transcoding settings, please refer to the <a href="link-to-documentation" class="text-sky-500 dark:text-sky-400 hover:underline">Transcoder Settings documentation</a>. Enabling transcoding for the first time may require additional steps outlined in the documentation.',
                        'external'
                    ) }}
					<div id="content-wrapper" class="relative px-4 mt-8 dark:prose-dark pb-3 mb-4 bg-gray-200/55 dark:bg-gray-900/85 rounded-lg">
						<div class="container mx-auto p-1">
                            <h1 class="text-3xl font-bold mb-8 text-center">Your Available Media Centers</h1>
                            {% set groupedApps = {} %}
                            {% for app in apps %}
                                {% set parts = app.name|split('@') %}
                                {% set app_name = parts[0]|capitalize %}
                                {% set app_username = parts[1]|replace({'.service': ''}) %}
                                {% if groupedApps[app_name] is not defined %}
                                    {% set groupedApps = groupedApps|merge({(app_name): []}) %}
                                {% endif %}
                                {% set groupedApps = groupedApps|merge({(app_name): groupedApps[app_name]|merge([{ 'name': app_name, 'username': app_username }])}) %}
                            {% endfor %}
                            {% for app_name, app_list in groupedApps %}
                                <div class="mb-12">
                                    <div class="flex items-center mb-4">
                                        <img class="h-auto max-w-[70px] p-1 rounded-full mr-4" src="/uploads/soft_logos/{{ app_name|lower }}.png" alt="{{ app_name }}_logo">
                                        <h2 class="text-3xl font-semibold">{{ app_name }}</h2>
                                    </div>
                                    <div class="overflow-hidden rounded-lg shadow-lg bg-white dark:bg-gray-800">
                                        <table class="min-w-full">
                                            <thead class="bg-gray-200 dark:bg-gray-700">
                                                <tr>
                                                    <th class="py-3 px-4 border-b border-gray-300 dark:border-gray-600 text-center text-sm font-semibold text-gray-900 dark:text-gray-100">App Name</th>
                                                    <th class="py-3 px-4 border-b border-gray-300 dark:border-gray-600 text-center text-sm font-semibold text-gray-900 dark:text-gray-100">Username</th>
                                                    <th class="py-3 px-4 border-b border-gray-300 dark:border-gray-600 text-center text-sm font-semibold text-gray-900 dark:text-gray-100">Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for app in app_list %}
                                                    <tr class="hover:bg-gray-100 dark:hover:bg-gray-700">
                                                        <td class="py-3 px-4 border-b border-gray-200 dark:border-gray-600 text-sm">{{ app.name }}</td>
                                                        <td class="py-3 px-4 border-b border-gray-200 dark:border-gray-600 text-sm">{{ app.username }}</td>
                                                        <td class="py-3 px-4 border-b border-gray-200 dark:border-gray-600 text-sm">
                                                            <a href="#" class="text-blue-500 dark:text-blue-400 hover:underline mr-2">Enable Transcoder</a>
                                                            <a href="#" class="text-red-500 dark:text-red-400 hover:underline">Disable Transcoder</a>
                                                        </td>
                                                    </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            {% endfor %}
                        </div>
					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
