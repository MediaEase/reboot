{% extends 'pages/security/splashscreen.html.twig' %}

{% block title %}Reset your password - {{ app.request.server.get('SITE_NAME') }}{% endblock %}

{% block body %}
{% import '_macros/branding.html.twig' as brand %}
	<div class="flex h-screen w-full items-center justify-center">
		<div class="rounded-xl bg-gray-800 bg-opacity-50 px-16 py-10 shadow-lg backdrop-blur-md max-sm:px-8">
			<div class="text-white">
				<div class="mb-8 flex flex-col items-center">
					{{ brand.logo(settings.brand, 'login') }}
					<h1 class="mb-2 text-3xl text-green-400">{{ app.request.server.get('SITE_NAME') }}</h1>
					<span class="text-green-200">Reset your password</span>
				</div>

				<h2 class="text-center text-xl text-green-200 mb-4">Enter your new password</h2>

				{{ form_start(resetForm) }}
					<div class="mb-4 text-lg">
						{{ form_widget(resetForm.plainPassword, {'attr': {'class': 'appearance-none block w-full bg-gray-300 text-gray-800 border border-gray-600 rounded py-3 px-4 md:w-[98%] mx-auto leading-tight focus:outline-none focus:bg-white focus:border-gray-500', 'placeholder': 'New Password'}}) }}
					</div>
					<div class="mt-8 flex justify-center text-lg text-black">
						<button type="submit" class="block bg-blue-500 hover:bg-blue-700 mt-5 py-2 px-10 rounded-2xl hover:-translate-y-1 transition-all duration-500 text-white font-semibold mb-2">Reset Password</button>
					</div>
				{{ form_end(resetForm) }}
			</div>
		</div>
	</div>
{% endblock %}
