{% extends 'pages/security/splashscreen.html.twig' %}

{% block title %}Reset your password - {{ app.request.server.get('SITE_NAME') }}{% endblock %}

{% block body %}
{% import '_macros/branding.html.twig' as brand %}
	<div class="flex h-screen w-full items-center justify-center">
		<div class="rounded-xl bg-gray-800 bg-opacity-50 px-16 py-10 shadow-lg backdrop-blur-md max-sm:px-8 min-w-[440px] h-[450px]">
			<div class="text-white">
				<div class="mb-8 flex flex-col items-center">
					{{ brand.logo(settings.brand, 'login') }}
					<h1 class="mb-2 text-2xl">{{ app.request.server.get('SITE_NAME') }}</h1>
					<span class="text-gray-300">Reset your password</span>
				</div>

				{% for flash_error in app.flashes('reset_password_error') %}
					<div class="alert alert-danger mb-4" role="alert">{{ flash_error }}</div>
				{% endfor %}

				{{ form_start(requestForm) }}
					<div class="mb-4 text-lg">
						{{ form_widget(requestForm.email, {'attr': {'class': 'appearance-none block w-full bg-gray-200 text-gray-700 border border-gray-700 dark:border-gray-200 rounded py-3 px-4 md:w-[98%] mx-auto leading-tight focus:outline-none focus:bg-white focus:border-gray-500', 'placeholder': 'Email'}}) }}
					</div>
                    <div class="text-white text-sm mb-8 pb-2">
						Enter your email address <br>
                        We will send you a link to reset your password.
					</div>
					<div class="mt-8 mb-12 flex justify-center text-lg text-black">
						<button type="submit" class="block bg-green-500 hover:bg-green-700 mt-5 py-2 px-10 rounded-2xl hover:-translate-y-1 transition-all duration-500 text-white font-semibold mb-2">Reset Password</button>
					</div>
				{{ form_end(requestForm) }}
			</div>
		</div>
	</div>
{% endblock %}
