{% macro avatar(user) %}
    {% set avatarSrc = gravatar_exists(user.email) ? gravatar(user.email) : user.getPreferences().avatar %}
    <img src="{{ avatarSrc }}" alt="{{ user.username }} avatar" class="absolute inset-0 h-full w-full object-cover"/>
{% endmacro %}

{% macro avatar_link(user, size = 8, rounded = 'full') %}
    {% set avatarSrc = gravatar_exists(user.email) ? gravatar(user.email) : user.getPreferences().avatar %}
    <img src="{{ avatarSrc }}" alt="{{ user.username }} avatar" class="w-{{ size }} h-{{ size }} rounded-{{ rounded }}"/>
{% endmacro %}

{% macro backdrop(user) %}
    {% set backdropImage = user.getPreferences.backdrop %}
    {% if 'default/' not in backdropImage %}
        {% set backdropImage = 'uploads/background/custom/' ~ backdropImage|replace({'-blur': ''}) %}
    {% endif %}
    <img src="{{ asset(backdropImage) }}" alt="{{ user.username }} backdrop" class="absolute inset-0 -z-10 h-full w-full object-cover object-right md:object-center"/>
{% endmacro %}

{% macro backdrop_link(user, size = 8, rounded = 'full') %}
    {% set backdropImage = user.getPreferences.backdrop %}
    {% if 'default/' not in backdropImage %}
        {% set backdropImage = 'uploads/background/custom/' ~ backdropImage|replace({'-blur': ''}) %}
    {% endif %}
    <img src="{{ asset(backdropImage) }}" alt="{{ user.username }} backdrop" class="w-{{ size }} h-{{ size }} rounded-{{ rounded }}"/>
{% endmacro %}

{% macro badge(user) %}
    {% if user.isVerified %}
        <span class="ml-2 mb-4 h-3 w-3 bg-green-500 rounded-full flex items-center justify-center text-xs font-medium text-white"></span>
    {% else %}
        <span class="ml-2 mb-4 h-3 w-3 bg-red-500 rounded-full flex items-center justify-center text-xs font-medium text-white"></span>
    {% endif %}
    
{% endmacro %}

{% macro banner(user) %}
    <div class="xl:pl-[25rem] relative isolate overflow-hidden bg-gray-900 py-24 sm:py-32 max-h-[65vh] lg:max-h-[70vh] rounded-xl">
        {{ _self.backdrop(user) }}
        {{ _self.transform_backdrop() }}
        <div class="absolute left-1/2 top-1/2 lg:top-1/3 z-50 -translate-x-1/2 -translate-y-1/2 w-48 h-48 lg:w-32 lg:h-32 rounded-full overflow-hidden">
            {{ _self.avatar(user) }}
            <div class="absolute inset-0 bg-gradient-to-tr to-[#ff4694] from-[#776fff] opacity-15" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
        </div>
    </div>
{% endmacro %}

{% macro transform_backdrop() %}
    <div class="hidden sm:absolute sm:-top-10 sm:right-1/2 sm:-z-10 sm:mr-10 sm:block sm:transform-gpu sm:blur-3xl" aria-hidden="true">
        <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-[#ff4694] to-[#776fff] opacity-20" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
    <div class="absolute -top-52 left-1/2 -z-10 -translate-x-1/2 transform-gpu blur-3xl sm:top-[-28rem] sm:ml-16 sm:translate-x-0 sm:transform-gpu" aria-hidden="true">
        <div class="aspect-[1097/845] w-[68.5625rem] bg-gradient-to-tr from-[#ff4694] to-[#776fff] opacity-20" style="clip-path: polygon(74.1% 44.1%, 100% 61.6%, 97.5% 26.9%, 85.5% 0.1%, 80.7% 2%, 72.5% 32.5%, 60.2% 62.4%, 52.4% 68.1%, 47.5% 58.3%, 45.2% 34.5%, 27.5% 76.7%, 0.1% 64.9%, 17.9% 100%, 27.6% 76.8%, 76.1% 97.7%, 74.1% 44.1%)"></div>
    </div>
{% endmacro %}
