{% macro save_button(form) %}
    {% import '_macros/form/buttons.html.twig' as buttons %}
    {{ buttons.save(form) }}
{% endmacro %}

{% macro cancel_button(form) %}
    {% import '_macros/form/buttons.html.twig' as buttons %}
    {{ buttons.cancel(form) }}
{% endmacro %}

{% macro reset_button(form) %}
    {% import '_macros/form/buttons.html.twig' as buttons %}
    {{ buttons.reset(form) }}
{% endmacro %}

{% macro delete_button(form) %}
    {% import '_macros/form/buttons.html.twig' as buttons %}
    {{ buttons.delete(form) }}
{% endmacro %}

{% macro iconed_error(form, fieldName) %}
    {% import '_macros/form/errors.html.twig' as errors %}
    {{ errors.iconed_error(form, fieldName) }}
{% endmacro %}

{% macro iconed_label(form, fieldName, context) %}
    {% import '_macros/form/labels.html.twig' as labels %}
    {{ labels.iconed_label(form, fieldName, context) }}
{% endmacro %}
