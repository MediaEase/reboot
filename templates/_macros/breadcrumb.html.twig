{% macro add(current_page_title, docs_url) %}
    <header id="header" class="relative bg-transparent dark:bg-gray-950/10 rounded-lg">
        <div class="px-4">
            <p class="text-left text-2xl mb-2 leading-6 font-bold text-sky-600 dark:text-sky-400" style="text-shadow: 0px 0px 5px rgba(56,189,248,0.4);">{{ 'Settings'|trans }}</p>
            <div class="flex items-center">
                <h1 class="inline-block text-2xl sm:text-3xl font-extrabold text-slate-900 tracking-tight dark:text-slate-200">
                    {{ current_page_title|trans }}
                    <a href="{{ docs_url }}" target="_blank" rel="noopener noreferrer">
                        <span 
                            class="form-label-span -mt-2" 
                            data-te-toggle="tooltip" 
                            data-te-html="true" 
                            data-te-ripple-init 
                            data-te-ripple-color="light" 
                            title="Go to documentation">
                            {{ ux_icon('bi:box-arrow-up-right', {class: 'w-4 h-4 ordinal inline-block ml-1 mb-3'}) }}
                        </span>
                    </a>
                </h1>
            </div>
        </div>
    </header>
{% endmacro %}
