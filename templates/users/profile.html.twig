{% extends 'users/base.html.twig' %}

{% block title %}Security Settings - {{ app.request.server.get('SITE_NAME') }}
{% endblock %}

{% block body %}
	{% import '_macros/settings_macro.html.twig' as settings_macro %}
	{% import '_macros/form_macros.html.twig' as form_macros %}
    {% import '_macros/profile_macro.html.twig' as profile %}
	<div class="max-w-[98%] md:mx-auto md:px-auto lg:pl-[5rem]">
        <div class="xl:pt-[.3615rem] pt-[6.5rem]">
            {{ profile.banner(user) }}
        </div>
        <div class="xl:pt-[2.3615rem] pt-[6.5rem] text-gray-600 dark:text-slate-200">
            <div class="flex flex-wrap -mx-3">
                <div class="w-full lg:w-1/4 px-3 mb-6">
                    <div class="p-4 bg-gray-200/55 dark:bg-gray-900/85 rounded-lg shadow-md">
                        <h3 class="text-xl font-semibold mb-4">Preferences</h3>
                        <div class="flex justify-between items-center mb-4">
                            <label for="switch-3" class="cursor-pointer">
                                Preference 1
                            </label>
                            <label class="relative inline-flex cursor-pointer">
                                <input id="switch-3" type="checkbox" class="peer sr-only" />
                                <label for="switch-3" class="hidden"></label>
                                <div class="peer h-4 w-11 rounded border dark:border-gray-900/85 bg-red-500 after:absolute after:-top-1 after:left-0 after:h-6 after:w-6 after:rounded-md after:border after:border-gray-200/55 dark:after:border-gray-900/85 after:bg-white after:transition-all after:content-[''] peer-checked:bg-green-400 peer-checked:after:translate-x-full peer-focus:ring-green-400"></div>
                            </label>
                        </div>
                        {{ form_start(userImagesForm) }}
                        <div class="flex flex-wrap -mx-3 xl:py-2">
                            {% for message in app.flashes('dropzone_success') %}
                                <div class="alert alert-success" data-turbo-cache="false">{{ message }}</div>
                            {% endfor %}
                            <div class="w-full flex items-center px-3 pt-2 xl:p-0">
                                <div class="w-2/3 xl:ml-3 xl-pl-3">
                                    {{ form_label(userImagesForm.backdrop) }}
                                    {{ form_widget(userImagesForm.backdrop) }}
                                </div>
                                <div class="w-1/3 ml-3 xl:mb-6 md:mb-0 pt-3 xl:mt-2 xl:p-0 xl:pl-3">
                                    {{ profile.backdrop_link(user, 16, 'md') }}
                                </div>
                            </div>
                            <button type="button" class="text-red-500 hover:text-red-700 px-4 rounded focus:outline-none focus:shadow-outline mt-2 xl:mb-6 md:mb-0"
                                data-reset-image-type-param="preference"
                                data-reset-image-context-param="background"
                            >Reset Backdrop</button>
                            <div class="w-full flex items-center px-3 pt-2 xl:p-0">
                                <div class="w-2/3 xl:ml-3 xl-pl-3">
                                    {{ form_label(userImagesForm.avatar) }}
                                    {{ form_widget(userImagesForm.avatar) }}
                                </div>
                                <div class="w-1/3 ml-3 xl:mb-6 md:mb-0 pt-3 xl:mt-2 xl:p-0 xl:pl-3">
                                    {{ profile.avatar_link(user, 16, 'md') }}
                                </div>
                                
                            </div>
                            <button type="button" class="text-red-500 hover:text-red-700 px-4 rounded focus:outline-none focus:shadow-outline mt-2 xl:mb-6 md:mb-0"
                                data-reset-image-type-param="preference"
                                data-reset-image-context-param="avatar"
                            >Reset Avatar</button>
                            <div class="w-full px-3 md:mb-0 pt-2 xl:p-0">
                                <button type="submit" class="border-blue-500 bg-blue-500 hover:bg-blue-700 hover:border-blue-700 border text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Submit</button>
                            </div>
                        </div>
                        {{ form_end(userImagesForm) }}
                    </div>
                </div>
                <div class="w-full lg:w-3/4 px-3 text-gray-600 dark:text-slate-200">
                    <form action="#" method="POST" class="p-4 bg-gray-200/55 dark:bg-gray-900/85 rounded-lg shadow-md">
                        <h3 class="text-xl font-semibold mb-4">Edit user form</h3>
                        <div class="mb-4">
                            <label for="example" class="block text-sm font-bold mb-2 text-left">Email</label>
                            <input type="text" id="example" name="example" class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" />
                        </div>
                        <div class="mb-4">
                            <label for="example" class="block text-sm font-bold mb-2 text-left">Email</label>
                            <input type="text" id="example" name="example" class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" />
                        </div>
                        <div class="mb-4">
                            <label for="example" class="block text-sm font-bold mb-2 text-left">Email</label>
                            <input type="text" id="example" name="example" class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" />
                        </div>
                        <div class="mb-4">
                            <label for="example" class="block text-sm font-bold mb-2 text-left">Email</label>
                            <input type="text" id="example" name="example" class="shadow appearance-none border rounded w-full py-2 px-3 leading-tight focus:outline-none focus:shadow-outline" />
                        </div>                     
                        <button type="submit" class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline">Submit</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
